// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  // Local development uses SQLite file database.
  // IMPORTANT: DATABASE_URL must point to ../backend/prisma/dev.db for shared database
  // The frontend and backend use the SAME database file
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("user")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Part {
  id           String      @id @default(cuid())
  partNo       String      @unique
  masterPartNo String?
  brand        String?
  description  String?
  mainCategory String?
  subCategory  String?
  application  String?
  hsCode       String?
  uom          String?
  weight       Float?
  reOrderLevel Int         @default(0)
  cost         Float?
  priceA       Float?
  priceB       Float?
  priceM       Float?
  rackNo       String?
  origin       String?
  grade        String?
  status       String      @default("A")
  smc          String?
  size         String?
  remarks      String?
  imageUrl1    String?     // Image for P1 tab
  imageUrl2    String?     // Image for P2 tab
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  models       PartModel[]
  stock        Stock?
  kitItems     KitItem[]
  purchaseOrderItems PurchaseOrderItem[]
  salesInvoiceItems SalesInvoiceItem[]
  salesQuotationItems SalesQuotationItem[]
  adjustmentItems InventoryAdjustmentItem[]
  deliveryChallanItems DeliveryChallanItem[]
  salesReturnItems SalesReturnItem[]
}

model PartModel {
  id       String   @id @default(cuid())
  partId   String
  part     Part     @relation(fields: [partId], references: [id], onDelete: Cascade)
  modelNo  String
  qtyUsed  Int
  tab      String   @default("P1") // P1 or P2
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([partId])
}

model Stock {
  id       String   @id @default(cuid())
  partId   String   @unique
  part     Part     @relation(fields: [partId], references: [id], onDelete: Cascade)
  quantity Int      @default(0)
  location String?
  store    String?
  racks    String?
  shelf    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id          String        @id @default(cuid())
  name        String
  type        String        // "main" or "sub"
  parentId    String?       // For subcategories, reference to main category
  parent      Category?      @relation("CategoryHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  subcategories Category[]   @relation("CategoryHierarchy")
  applications Application[] @relation("ApplicationToSubCategory")
  description String?
  status      String        @default("A") // "A" for active, "I" for inactive
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([type])
  @@index([parentId])
}


model Kit {
  id          String     @id @default(cuid())
  kitNo       String     @unique
  name        String
  description String?
  totalCost   Float      @default(0)
  price       Float?
  status      String     @default("A") // "A" for active, "I" for inactive
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  items       KitItem[]

  @@index([kitNo])
}

model KitItem {
  id          String   @id @default(cuid())
  kitId       String
  kit         Kit      @relation(fields: [kitId], references: [id], onDelete: Cascade)
  partId      String
  part        Part     @relation(fields: [partId], references: [id], onDelete: Cascade)
  quantity    Int      @default(1)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([kitId])
  @@index([partId])
}

model Supplier {
  id              String          @id @default(cuid())
  code            String          @unique
  name            String
  email           String?
  phone           String?
  address         String?
  city            String?
  state           String?
  country         String?
  zipCode         String?
  contactPerson   String?
  taxId           String?
  paymentTerms    String?
  notes           String?
  status          String          @default("A") // "A" for active, "I" for inactive
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  purchaseOrders  PurchaseOrder[]

  @@index([code])
  @@index([status])
}

model PurchaseOrder {
  id              String              @id @default(cuid())
  poNo            String              @unique
  type            String              // "purchase" or "direct"
  supplierId      String?             // Reference to supplier (only for purchase orders)
  supplier        Supplier?           @relation(fields: [supplierId], references: [id], onDelete: SetNull)
  supplierName    String              // Store supplier name for direct orders or as backup
  supplierEmail   String?
  supplierPhone   String?
  supplierAddress String?
  orderDate       DateTime            @default(now())
  expectedDate    DateTime?
  status          String              @default("draft") // draft, pending, approved, received, cancelled
  paymentMethod   String?             // cash, bank_transfer, cheque, credit_card, other
  subTotal        Float               @default(0)
  tax             Float               @default(0)
  discount        Float               @default(0)
  totalAmount     Float               @default(0)
  notes           String?
  createdBy       String?
  approvedBy      String?
  approvedAt      DateTime?
  receivedAt      DateTime?
  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt
  items           PurchaseOrderItem[]

  @@index([poNo])
  @@index([status])
  @@index([type])
  @@index([orderDate])
  @@index([supplierId])
}

model SalesInvoice {
  id              String              @id @default(cuid())
  invoiceNo       String              @unique
  quotationId     String?
  quotation       SalesQuotation?     @relation("QuotationToInvoice", fields: [quotationId], references: [id], onDelete: SetNull)
  customerId      String?
  customer        Customer?           @relation(fields: [customerId], references: [id], onDelete: SetNull)
  customerName    String
  customerEmail   String?
  customerPhone   String?
  customerAddress String?
  invoiceDate     DateTime            @default(now())
  dueDate         DateTime
  status          String              @default("draft") // draft, sent, paid, overdue, cancelled
  subTotal        Float               @default(0)
  tax             Float               @default(0)
  discount        Float               @default(0)
  totalAmount     Float               @default(0)
  paidAmount      Float               @default(0)
  balanceAmount   Float               @default(0)
  notes           String?
  createdBy       String?
  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt
  items           SalesInvoiceItem[]
  deliveryChallans DeliveryChallan[]
  salesReturns    SalesReturn[]

  @@index([invoiceNo])
  @@index([status])
  @@index([invoiceDate])
  @@index([customerName])
  @@index([customerId])
}

model SalesInvoiceItem {
  id              String        @id @default(cuid())
  salesInvoiceId  String
  salesInvoice    SalesInvoice  @relation(fields: [salesInvoiceId], references: [id], onDelete: Cascade)
  partId          String?
  part            Part?         @relation(fields: [partId], references: [id], onDelete: SetNull)
  partNo          String
  description     String?
  quantity        Int           @default(1)
  unitPrice       Float
  totalPrice      Float
  uom             String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([salesInvoiceId])
  @@index([partId])
}

model PurchaseOrderItem {
  id              String         @id @default(cuid())
  purchaseOrderId String
  purchaseOrder   PurchaseOrder  @relation(fields: [purchaseOrderId], references: [id], onDelete: Cascade)
  partId          String?
  part            Part?          @relation(fields: [partId], references: [id], onDelete: SetNull)
  partNo          String         // Store part number even if part is deleted
  description     String?
  quantity        Int
  unitPrice       Float
  totalPrice      Float
  uom             String?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  @@index([purchaseOrderId])
  @@index([partId])
}

model MainGroup {
  id          String     @id @default(cuid())
  code        Int        @unique // Numeric code like 1, 2, 3, etc.
  name        String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  subgroups   SubGroup[]

  @@index([code])
}

model SubGroup {
  id          String     @id @default(cuid())
  mainGroupId String
  mainGroup   MainGroup  @relation(fields: [mainGroupId], references: [id], onDelete: Cascade)
  code        String     // Code like "101", "102", etc.
  name        String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  accounts    Account[]

  @@index([mainGroupId])
  @@index([code])
}

model Account {
  id          String     @id @default(cuid())
  subGroupId  String
  subGroup    SubGroup   @relation(fields: [subGroupId], references: [id], onDelete: Cascade)
  code        String     // Full account code like "101001", "102008", etc.
  name        String
  status      String     @default("Active") // "Active" or "Inactive"
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([subGroupId])
  @@index([code])
  @@index([status])
}

model SalesInquiry {
  id            String   @id @default(cuid())
  inquiryNo     String   @unique
  customerName  String
  customerEmail String?
  customerPhone String?
  customerAddress String?
  inquiryDate   DateTime @default(now())
  status        String   @default("new") // new, contacted, quoted, converted, lost
  subject       String
  description   String?
  followUpDate  DateTime?
  notes         String?
  createdBy     String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([inquiryNo])
  @@index([status])
  @@index([inquiryDate])
  @@index([customerName])
}

model SalesQuotation {
  id              String                @id @default(cuid())
  quotationNo     String                @unique
  inquiryId       String?
  customerName    String
  customerEmail   String?
  customerPhone   String?
  customerAddress String?
  quotationDate   DateTime              @default(now())
  validUntil      DateTime
  status          String                @default("draft") // draft, sent, accepted, rejected, expired
  subTotal        Float                 @default(0)
  tax             Float                 @default(0)
  discount        Float                 @default(0)
  totalAmount     Float                 @default(0)
  notes           String?
  createdBy       String?
  createdAt       DateTime              @default(now())
  updatedAt       DateTime              @updatedAt
  items           SalesQuotationItem[]
  invoices        SalesInvoice[]        @relation("QuotationToInvoice")

  @@index([quotationNo])
  @@index([status])
  @@index([quotationDate])
  @@index([customerName])
}

model SalesQuotationItem {
  id              String         @id @default(cuid())
  salesQuotationId String
  salesQuotation  SalesQuotation @relation(fields: [salesQuotationId], references: [id], onDelete: Cascade)
  partId          String?
  part            Part?          @relation(fields: [partId], references: [id], onDelete: SetNull)
  partNo          String
  description     String?
  quantity        Int            @default(1)
  unitPrice       Float
  totalPrice      Float
  uom             String?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  @@index([salesQuotationId])
  @@index([partId])
}

model DeliveryChallan {
  id              String                @id @default(cuid())
  challanNo       String                @unique
  invoiceId       String?
  salesInvoice    SalesInvoice?         @relation(fields: [invoiceId], references: [id], onDelete: SetNull)
  customerName    String
  customerEmail   String?
  customerPhone   String?
  customerAddress String?
  deliveryDate     DateTime              @default(now())
  deliveryAddress String?
  vehicleNo       String?
  driverName      String?
  status          String                @default("draft") // draft, dispatched, delivered, cancelled
  notes           String?
  createdBy       String?
  createdAt       DateTime              @default(now())
  updatedAt       DateTime              @updatedAt
  items           DeliveryChallanItem[]

  @@index([challanNo])
  @@index([status])
  @@index([deliveryDate])
  @@index([customerName])
}

model DeliveryChallanItem {
  id              String          @id @default(cuid())
  deliveryChallanId String
  deliveryChallan  DeliveryChallan @relation(fields: [deliveryChallanId], references: [id], onDelete: Cascade)
  partId           String?
  part             Part?           @relation(fields: [partId], references: [id], onDelete: SetNull)
  partNo           String
  description      String?
  quantity         Int             @default(1)
  uom              String?
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt

  @@index([deliveryChallanId])
  @@index([partId])
}

model SalesReturn {
  id              String            @id @default(cuid())
  returnNo        String            @unique
  invoiceId       String?
  salesInvoice    SalesInvoice?     @relation(fields: [invoiceId], references: [id], onDelete: SetNull)
  customerName    String
  customerEmail   String?
  customerPhone   String?
  returnDate      DateTime          @default(now())
  status          String            @default("draft") // draft, approved, processed, rejected
  totalAmount     Float             @default(0)
  refundAmount    Float             @default(0)
  reason          String?
  notes           String?
  createdBy       String?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  items           SalesReturnItem[]

  @@index([returnNo])
  @@index([status])
  @@index([returnDate])
  @@index([customerName])
}

model SalesReturnItem {
  id              String        @id @default(cuid())
  salesReturnId   String
  salesReturn     SalesReturn   @relation(fields: [salesReturnId], references: [id], onDelete: Cascade)
  partId          String?
  part            Part?         @relation(fields: [partId], references: [id], onDelete: SetNull)
  partNo          String
  description     String?
  quantity        Int           @default(1)
  returnReason    String
  uom             String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([salesReturnId])
  @@index([partId])
}

model Vehicle {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([name])
}

model VehicleModel {
  id        String   @id @default(cuid())
  machine   String
  make      String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([machine])
  @@index([make])
  @@index([name])
}

model Make {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([name])
}

model Application {
  id           String    @id @default(cuid())
  name         String
  subCategoryId String?
  subCategory  Category? @relation("ApplicationToSubCategory", fields: [subCategoryId], references: [id], onDelete: SetNull)
  status       String    @default("A") // "A" for active, "I" for inactive
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@unique([name, subCategoryId])
  @@index([name])
  @@index([status])
  @@index([subCategoryId])
}

model Dimension {
  id          String   @id @default(cuid())
  name        String   @unique // Dimension code like "W", "H", "L"
  description String?  // Description like "Width", "Height", "Length"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([name])
}

model Customer {
  id             String         @id @default(cuid())
  name           String
  email          String?
  phone          String?
  address        String?
  cnic           String?
  status         String         @default("A")
  openingBalance Float          @default(0)
  creditBalance  Float          @default(0)
  creditLimit    Float          @default(0)
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  salesInvoices  SalesInvoice[]

  @@index([name])
  @@index([status])
  @@index([phone])
}

model Company {
  id        String   @id @default(cuid())
  name      String   @unique
  status    String   @default("A") // "A" for active, "I" for inactive
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([name])
  @@index([status])
}

model InventoryAdjustment {
  id          String                      @id @default(cuid())
  adjustmentNo String?                    // Optional adjustment number
  total       Float                       @default(0)
  date        DateTime                    @default(now())
  notes       String?
  createdBy   String?
  createdAt   DateTime                    @default(now())
  updatedAt   DateTime                    @updatedAt
  items       InventoryAdjustmentItem[]

  @@index([date])
  @@index([adjustmentNo])
}

model InventoryAdjustmentItem {
  id                    String              @id @default(cuid())
  adjustmentId           String
  adjustment             InventoryAdjustment @relation(fields: [adjustmentId], references: [id], onDelete: Cascade)
  partId                 String?
  part                   Part?               @relation(fields: [partId], references: [id], onDelete: SetNull)
  partNo                 String
  description            String?
  previousQuantity       Int                 @default(0)
  adjustedQuantity       Int                 // Can be positive (increase) or negative (decrease)
  newQuantity            Int                 // Calculated: previousQuantity + adjustedQuantity
  reason                 String?             // Reason for adjustment
  createdAt              DateTime            @default(now())
  updatedAt              DateTime            @updatedAt

  @@index([adjustmentId])
  @@index([partId])
}

model StoreType {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  stores    Store[]

  @@index([name])
}

model Store {
  id           String      @id @default(cuid())
  name         String
  storeTypeId  String
  description  String?
  status       String      @default("A")
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  storeType    StoreType   @relation(fields: [storeTypeId], references: [id], onDelete: Cascade)
  racks        Rack[]

  @@index([name])
  @@index([storeTypeId])
}

model Rack {
  id          String   @id @default(cuid())
  rackNumber  String
  storeId     String
  description String?
  status      String   @default("A")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  store       Store    @relation(fields: [storeId], references: [id], onDelete: Cascade)
  shelves     Shelf[]

  @@unique([rackNumber, storeId])
  @@index([storeId])
}

model Shelf {
  id          String   @id @default(cuid())
  shelfNumber String
  rackId      String
  description String?
  status      String   @default("A")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  rack        Rack     @relation(fields: [rackId], references: [id], onDelete: Cascade)

  @@unique([shelfNumber, rackId])
  @@index([rackId])
}

model Brand {
  id        String   @id @default(cuid())
  name      String   @unique
  status    String   @default("A") // "A" for active, "I" for inactive
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([name])
  @@index([status])
}

model PurchaseOrderDeletionLog {
  id              String   @id @default(cuid())
  purchaseOrderId String
  poNo            String
  type            String   // "purchase" or "direct"
  deletedBy       String   // User ID
  deletedByName   String   // User name
  deletedByEmail  String   // User email
  deletedByRole   String   // User role
  ipAddress       String?  // IP address from where deletion occurred
  status          String   // Status of PO when deleted
  wasReceived     Boolean  @default(false) // Whether PO was received (stock needs reversal)
  stockReversed   Boolean  @default(false) // Whether stock was successfully reversed
  notes           String?  // Additional notes
  createdAt       DateTime @default(now())

  @@index([purchaseOrderId])
  @@index([poNo])
  @@index([deletedBy])
  @@index([createdAt])
}


